{
  "name": "terminal-snippets",
  "displayName": "Terminal Snippets",
  "description": "Runs predefined terminal commands with various types of arguments.",
  "version": "0.0.3",
  "license": "MIT",
  "publisher": "Bachi Mjavanadze",
  "repository": {
    "type": "github",
    "url": "https://github.com/BachiMjavanadze/CommandLauncher-master"
  },
  "engines": {
    "vscode": "^1.90.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:terminal-snippets"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "terminalSnippets.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "terminalSnippets.run",
        "title": "Run",
        "icon": "$(run)"
      },
      {
        "command": "terminalSnippets.runLast",
        "title": "Run last",
        "icon": "$(refresh)"
      },
      {
        "command": "terminalSnippets.showContextMenu",
        "title": "Terminal Snippets"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminal-snippets",
          "title": "Terminal Snippets",
          "icon": "$(terminal-cmd)"
        }
      ]
    },
    "views": {
      "terminal-snippets": [
        {
          "id": "snippets",
          "name": "At your command",
          "contextualTitle": "Terminal Snippets"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "terminalSnippets.refresh",
          "when": "view == snippets",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "terminalSnippets.run",
          "when": "view == snippets && viewItem == hasCommand",
          "group": "inline"
        },
        {
          "command": "terminalSnippets.runLast",
          "when": "view == snippets && viewItem == hasCommand",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "terminalSnippets.showContextMenu",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Actions",
      "properties": {
        "terminalSnippets.actions": {
          "type": "array",
          "description": "Array of actions to be provided to user.",
          "default": [],
          "items": {
            "type": "object",
            "description": "Command and variables associated.",
            "additionalProperties": false,
            "required": [
              "command",
              "variables"
            ],
            "properties": {
              "cwd": {
                "description": "The current working directory.",
                "type": "string",
                "minLength": 1
              },
              "group": {
                "description": "All commands with the same group will be packed in the tree.",
                "type": "string",
                "default": ""
              },
              "label": {
                "description": "Label to be shown in tree. If none, command will be shown instead.",
                "type": "string",
                "default": ""
              },
              "preCommand": {
                "description": "Command that will be launched only at terminal creation.",
                "type": "string",
                "default": ""
              },
              "command": {
                "description": "Command to be executed.",
                "type": "string"
              },
              "variables": {
                "type": "object",
                "description": "Variables to be substituted in the command",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "options": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "placeholder": {
                      "type": "string"
                    }
                  },
                  "required": ["placeholder"]
                }
              },
              "revealConsole": {
                "description": "Whether to reveal the terminal console when running the command.",
                "type": "boolean",
                "default": true
              },
              "isContextMenuCommand": {
                "description": "Whether this command should appear in the context menu",
                "type": "boolean",
                "default": false
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
